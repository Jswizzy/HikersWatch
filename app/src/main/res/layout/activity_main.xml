<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/stars"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" android:cropToPadding="false" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Hiker's Watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/fira_mono" android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:textAllCaps="true" android:textStyle="bold"/>
    <TextView
            android:text="Lattitude: 40.473820"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latTextView" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:fontFamily="@font/fira_mono" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Longitude: 40.4780"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longTextView" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:fontFamily="@font/fira_mono" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/latTextView"/>
    <TextView
            android:text="Altitude: 40.4780"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/altTextView" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:fontFamily="@font/fira_mono"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/longTextView"/>
    <TextView
            android:text="Accuracy: 40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accuracyTextView" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:fontFamily="@font/fira_mono"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/altTextView"/>
    <TextView
            android:text="Address:\n40 Street Blvd\nsomewhere, Kansas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressTextView" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:fontFamily="@font/fira_mono"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/accuracyTextView"
            android:textSize="14sp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="32dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>